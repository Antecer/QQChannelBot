<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Version>1.1.1</Version>
    <Description>QQ机器人框架</Description>
    <Copyright>Copyright © 2021 Antecer. All rights reserved.</Copyright>
    <PackageProjectUrl>https://github.com/Antecer/QQChannelBot</PackageProjectUrl>
    <RepositoryUrl>https://github.com/Antecer/QQChannelBot.git</RepositoryUrl>
    <PackageTags>QQ;Channel;Bot;频道;机器人</PackageTags>
    <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryType>git</RepositoryType>
    <PackageReleaseNotes>修改ChannelBot名称为BotClient；完善错误代码列表；更新文档</PackageReleaseNotes>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
