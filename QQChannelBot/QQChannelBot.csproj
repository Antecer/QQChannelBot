<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Version>1.0.5</Version>
    <Description>QQ机器人框架</Description>
    <Copyright>Copyright © 2021 Antecer. All rights reserved.</Copyright>
    <PackageProjectUrl>https://github.com/Antecer/QQChannelBot</PackageProjectUrl>
    <RepositoryUrl>https://github.com/Antecer/QQChannelBot.git</RepositoryUrl>
    <PackageTags>修复掉线重连失败的bug；新增频道禁言功能。</PackageTags>
    <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryType>git</RepositoryType>
    <PackageReleaseNotes>优化公告API，删除公告不需要再传递message_id</PackageReleaseNotes>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
